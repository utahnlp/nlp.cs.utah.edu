source "https://rubygems.org"

gem "jekyll", "~> 4.3.0"

# Bibliography Dependencies
gem "bibtex-ruby"
gem "citeproc-ruby"
gem "csl-styles"

# Useful Plugins
gem "jekyll-sitemap"
gem "jekyll-seo-tag"
gem "webrick"

# Standard library gems removed in Ruby 3.4+
gem "csv"
gem "base64"

# Windows Compatibility
gem "wdm", ">= 0.1.0", install_if: Gem.win_platform?

